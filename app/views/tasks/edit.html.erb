<h1> Edit your task</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed, class: "form-check-input" %>
  <%= f.submit %>
<% end %>

<h3><%=link_to "Back to tasks list", tasks_path %></h3>
