<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<p></p>
<h3><%=link_to "Back to tasks list", tasks_path %></h3>

<%= link_to "Edit",
  edit_path(@task),
  data: :edit
%>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
